        "esModuleInterop": true,
        "lib": ["ES2019", "ES2019.String", "ES2019.Array"],
        "module": "CommonJS",
        "removeComments": true,
        "rootDir": "./",
        "sourceMap": false,
        "strict": true,
        "target": "ES2019"
    },
    "typeAcquisition":
