{
  "name": "@snaplib/npm-fs",
  "version": "0.3.5",
  "description": "Object oriented file system API",
  "type": "module",
  "main": "./npm-fs.js",
  "types": "./types/npm-fs.d.ts",
  "directories": {
    "bin": "bin",
    "lib": "lib"
  },
  "author": {
    "name": "Snap",
    "email": "snap@snaplib.org"
  },
  "license": "MIT",
  "homepage": "http://www.snaplib.org/npm-fs",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/SnapLib/npm-fs.git"
  },
  "scripts": {
    "build-dist": "tsc -p src/main/ts/tsconfig.json --outDir build/dist/$npm_config_dist_root_pkg_dirname -d --declarationDir build/dist/$npm_config_dist_root_pkg_dirname/types && node scripts/build/build-dist.mjs $npm_config_dist_root_pkg_dirname",
    "build-types": "tsc -p src/main/ts/tsconfig.json -d --emitDeclarationOnly --declarationDir build/dist/snaplib__npm-fs",
    "clean": "node scripts/clean.mjs",
    "lint": "eslint --ext ts src/main/ts",
    "mocha": "mocha -r ts-node/register --extension ts --recursive true",
    "npm-fs": "node build/js/npm-fs.js",
    "test": "mocha -r ts-node/register --extension ts --recursive true src/test/ts",
    "test-report": "mocha -r ts-node/register --extension ts --recursive true src/test/ts --reporter mochawesome --reporter-options consoleReporter=none,reportDir=build/test,reportFilename=index",
    "ts-node": "ts-node",
    "tsc": "tsc",
    "tsc-src": "tsc -p src/main/ts/tsconfig.json --outDir build/js",
    "typedoc": "typedoc"
  },
  "keywords": [
    "snaplib",
    "npm",
    "file",
    "system"
  ],
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.9",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "chai": "^4.2.0",
    "eslint": "^7.14.0",
    "mocha": "^8.2.1",
    "mochawesome": "^6.2.1",
    "ts-node": "^9.0.0",
    "tslib": "^1.14.1",
    "typedoc": "^0.19.2",
    "typescript": "^4.1.2"
  }
}
